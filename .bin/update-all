#!/bin/sh

### Homebrew
if which brew > /dev/null 2>&1
then
  brew update && brew upgrade && brew cask upgrade && brew cleanup && brew doctor
fi

### Pyenv
if [[ -s "$HOME/.pyenv/plugins/pyenv-update/bin/pyenv-update" ]]
then
  pyenv update
fi

### ZimFramework
if [[ -d "$HOME/.zim" ]]
then
  (cd "$HOME/.zim" &&
    git remote update -p &&
    git merge --ff-only @{u} &&
    git submodule update --init --recursive)
fi
